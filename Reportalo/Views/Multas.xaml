<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reportalo.Views.Multas"
             Title="Multas"
             IconImageSource="multa.png">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="vistamulta" HasUnevenRows="True" IsPullToRefreshEnabled="True" IsRefreshing="True" SeparatorColor="SpringGreen" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding created_at}" ></Label>
                                <Label Text="{Binding nombre}" FontSize="Large" FontAttributes="Bold"></Label>
                                <Label Text="{Binding registro}" TranslationY="-2" ></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>